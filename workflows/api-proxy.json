    {
      "parameters": {
        "method": "={{ $json.method }}",
        "url": "={{ $json.url }}",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": "={{ Object.entries(JSON.parse($json.headers)).map(([k,v]) => ({name: k, value: v})) }}"
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": "={{ Object.entries(JSON.parse($json.data)).map(([k,v]) => ({name: k, value: v})) }}"
        },
        "options": {
          "timeout": 30000,
          "response": {
            "response": {
              "neverError": true
            }
          }
        }
      },
