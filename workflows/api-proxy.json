    {
      "parameters": {
        "jsCode": "// 统一响应格式\nconst response = {\n  success: true,\n  status: $item(0).json.statusCode || 200,\n  data: $item(0).json.data || $item(0).json,\n  timestamp: new Date().toISOString(),\n  proxyBy: 'n8n'\n};\n\nreturn { json: response };"
      },
      "id": "format-response",
      "name": "格式化响应",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [850, 300]
    },
